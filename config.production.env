# Production Configuration Template
# Copy this file to config.env and update values for production deployment

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./whatsapp-sessions
WHATSAPP_QR_TIMEOUT=60000

# Mikrotik Configuration (UPDATE THESE)
MIKROTIK_HOST=YOUR_MIKROTIK_IP
MIKROTIK_USER=YOUR_MIKROTIK_USERNAME
MIKROTIK_PASSWORD=YOUR_MIKROTIK_PASSWORD
MIKROTIK_PORT=8728

# Server Configuration
PORT=3010
NODE_ENV=production

# Security Configuration (IMPORTANT: Change these secrets!)
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_SECRET_FOR_PRODUCTION
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_SECRET_FOR_SESSION
CORS_ORIGIN=https://yourdomain.com

# Database Configuration
DB_PATH=./voucher_wifi.db

# Admin Configuration (UPDATE THESE)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_STRONG_ADMIN_PASSWORD
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_FULL_NAME=Administrator

# Admin WhatsApp Numbers (comma separated)
ADMIN_PHONES=YOUR_ADMIN_WHATSAPP_NUMBERS

# HTTPS Configuration (for production)
HTTPS_ENABLED=true
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Logging Configuration
LOG_LEVEL=error
ENABLE_ACCESS_LOG=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Security
SECURE_COOKIES=true
COOKIE_SAME_SITE=strict
